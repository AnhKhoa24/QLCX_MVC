@model QLCX.Models.DinhMuc

@{
    ViewBag.Title = "DinhMucSua";
    QLCX.Models.QuanLyCayXanhEntities1 db = new QLCX.Models.QuanLyCayXanhEntities1();
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2 style="text-align:center">Cập nhật định mức</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>DinhMuc</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <input type="hidden" name="OldID" value="@Model.LoaiCay">
        <input type="hidden" name="OldAge" value="@Model.TuoiCuaCay">

        <div class="form-group">
            <label class = "control-label col-md-2">Tiền chăm sóc</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TienChamSoc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TienChamSoc, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
