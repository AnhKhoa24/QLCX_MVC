@model QLCX.Models.LoaiCay

@{
    ViewBag.Title = "LoaiCayXoa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2><span style="color:red">Thông báo!!!</span></h2>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
<h3 style="text-align:center">Bạn có chắc muốn xóa?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên loại cây
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenLoaiCay)
        </dd>

        <dt>
            Xuất xứ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.XuatXu)
        </dd>

        <dt>
            Hình ảnh
        </dt>

        <dd>
            <img src="~/Photos/@Html.DisplayFor(model=> model.HinhAnh)" height="100">
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <input type="hidden" value="@Html.DisplayFor(model => model.MaLoaiCay)" name="MaLoaiCay" />
        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Quay trở lại", "LoaiCayXem")
        </div>
    }
</div>
