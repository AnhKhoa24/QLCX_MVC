@model QLCX.Models.LoaiCay

@{
    ViewBag.Title = "LoaiCaySua";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
}

<h2 style="text-align:center">Chỉnh sửa loại cây</h2>

@using (Html.BeginForm("LoaiCaySua", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaLoaiCay)

        <div class="form-group">
            <label class="control-label col-md-2">Tên loại cây</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenLoaiCay, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenLoaiCay, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Xuất xứ</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.XuatXu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.XuatXu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Hình ảnh</label>
            <div class="col-md-10">
                <input type="file" name="newFile" />
                <img src="~/Photos/@Html.DisplayFor(modelItem => Model.HinhAnh)" height="100">
                <input type="hidden" name="oldFile" value="@Html.DisplayFor(modelItem => Model.HinhAnh)">

                @Html.ValidationMessageFor(model => model.HinhAnh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
